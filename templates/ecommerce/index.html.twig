{% block body %}
    <div id="wizard_container">
        <form name="example-1" id="wrapped" method="POST">
            <input id="website" name="website" type="text" value="">
            <!-- Leave for security protection, read docs for details -->
            <div id="middle-wizard">

                <div class="step">
                    <div class="question_title">
                        <h3>Please select a product</h3>
                        <p>Single Selection (Radio based)</p>
                        {% for i in 0..types|length %}
                            {{ i }}
                        {% endfor %}
                    </div>

                    <div id="carousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            {% for i in 0..types|length %}
                                {% set slide = i+1 %}
                                <li data-target="#carousel" data-slide-to="{{ slide }}"></li>
                            {% endfor %}
                        </ol>
                        <div class="carousel-inner">
                            {% for type in types %}
                                {{ dump(type) }}
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22800%22%20height%3D%22400%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20800%20400%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_165b55f73e5%20text%20%7B%20fill%3A%23555%3Bfont-weight%3Anormal%3Bfont-family%3AHelvetica%2C%20monospace%3Bfont-size%3A40pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_165b55f73e5%22%3E%3Crect%20width%3D%22800%22%20height%3D%22400%22%20fill%3D%22%23777%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%22284.5%22%20y%3D%22220.1%22%3EFirst%20slide%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" alt="{{ type.name }}">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h5>{{ type.name }}</h5>
                                        <p>...</p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-lg-4">
                            <div class="item">
                                <input data-price="1499.00" data-label="MacBook Pro Air" id="answer_1_group_1" type="radio" name="answer_group_1" value="MacBook Pro Air $1499.00" class="required">
                                <label for="answer_1_group_1"><img src="img/product_1.jpg" alt="" class="img-fluid"><i class="ribbon"><span>Popular</span></i><span class="item_price">$1499.00</span><strong>MacBook Pro Air</strong>Postea democritum mnesarchum ne nam, ad vim aperiri tractatos.</label>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="item">
                                <input data-price="1699.00" data-label="MacBook Pro 15"  id="answer_2_group_1" name="answer_group_1" type="radio" value="MacBook Pro 15 $1699.00" class="required">
                                <label for="answer_2_group_1"><img src="img/product_2.jpg" alt="" class="img-fluid"><span class="item_price">$1699.00</span><strong>MacBook Pro 15</strong>Postea democritum mnesarchum ne nam, ad vim aperiri tractatos.</label>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="item">
                                <input data-price="1999.00" data-label="Imac 27" id="answer_3_group_1" name="answer_group_1" type="radio" value="Imac 27 $1999.00" class="required">
                                <label for="answer_3_group_1"><img src="img/product_3.jpg" alt="" class="img-fluid"><span class="item_price">$1999.00</span><strong>Desktop Imac 27</strong>Postea democritum mnesarchum ne nam, ad vim aperiri tractatos.</label>
                            </div>
                        </div>
                    </div>
                    <!-- /row-->
                </div>
                <!-- /step -->

                <div class="step">
                    <div class="question_title">
                        <h3>Which Processor is right for you?</h3>
                        <p>Single Selection (Radio based)</p>
                        {{ dump(colors) }}
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-lg-4">
                            <div class="item">
                                <input data-price="199.00" data-label="3.2GHz 8-core Intel Xeon" id="answer_1_group_2" type="radio" name="answer_group_2" value="3.2GHz 8-core Intel Xeon $199.00" class="required">
                                <label for="answer_1_group_2"><img src="img/processor_1.jpg" alt="" class="img-fluid"><span class="item_price">$199.00</span><strong>3.2GHz 8-core Intel Xeon</strong>Postea democritum mnesarchum ne nam, ad vim aperiri tractatos.</label>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="item">
                                <input data-price="299.00" data-label="3.6GHz 10-core Intel Xeon"  id="answer_2_group_2" name="answer_group_2" type="radio" value="3.6GHz 10-core Intel Xeon $299.00" class="required">
                                <label for="answer_2_group_2"><img src="img/processor_2.jpg" alt="" class="img-fluid"><i class="ribbon"><span>Popular</span></i><span class="item_price">$299.00</span><strong>3.6GHz 10-core Intel Xeon</strong>Postea democritum mnesarchum ne nam, ad vim aperiri tractatos.</label>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="item">
                                <input data-price="399.00" data-label="3.2GHz 18-core Intel Xeon" id="answer_3_group_2" name="answer_group_2" type="radio" value="3.2GHz 18-core Intel Xeon $399.00" class="required">
                                <label for="answer_3_group_2"><img src="img/processor_3.jpg" alt="" class="img-fluid"><span class="item_price">$399.00</span><strong>3.2GHz 18-core Intel Xeon</strong>Postea democritum mnesarchum ne nam, ad vim aperiri tractatos.</label>
                            </div>
                        </div>
                    </div>
                    <!-- /row-->
                </div>
                <!-- /step -->

                <div class="step">
                    <div class="question_title">
                        <h3>How much Memory is right for you?</h3>
                        <p>Single Selection (Radio based)</p>
                        {{ dump(patches) }}
                    </div>
                    <!--div class="row justify-content-center">
                        <div class="col-lg-4">
                            <div class="item">
                                <input data-price="99.00" data-label="32GB 2666MHz" id="answer_1_group_3" type="radio" name="answer_group_3" value="332GB 2666MHz $99.00" class="required">
                                <label for="answer_1_group_3"><img src="img/memory_1.jpg" alt="" class="img-fluid"><span class="item_price">$99.00</span><strong>32GB 2666MHz</strong>Postea democritum mnesarchum ne nam, ad vim aperiri tractatos.</label>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="item">
                                <input data-price="145.00" data-label="64GB 2666MHz"  id="answer_2_group_3" name="answer_group_3" type="radio" value="64GB 2666MHz $145.00" class="required">
                                <label for="answer_2_group_3"><img src="img/memory_2.jpg" alt="" class="img-fluid"><i class="ribbon"><span>Popular</span></i><span class="item_price">$145.00</span><strong>64GB 2666MHz</strong>Postea democritum mnesarchum ne nam, ad vim aperiri tractatos.</label>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="item">
                                <input data-price="200.00" data-label="128GB 2666MHz" id="answer_3_group_3" name="answer_group_3" type="radio" value="128GB 2666MHz $200.00" class="required">
                                <label for="answer_3_group_3"><img src="img/memory_3.jpg" alt="" class="img-fluid"><span class="item_price">$200.00</span><strong>128GB 2666MHz</strong>Postea democritum mnesarchum ne nam, ad vim aperiri tractatos.</label>
                            </div>
                        </div>
                    </div-->
                    <!-- /row-->
                </div>
                <!-- /step -->

                <!-- Last step ============================== -->
                <div class="submit step">
                    <div class="question_title">
                        <h3>Plase fill with your details</h3>
                        <p>Ei duo homero postea dignissim.</p>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="box_general">
                                <div class="form-group">
                                    <input type="text" name="first_last_name" class="required form-control" placeholder="First and Last name">
                                </div>
                                <div class="form-group">
                                    <input type="email" name="email" class="required form-control" placeholder="Your Email">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="telephone" class="form-control" placeholder="Your Telephone">
                                </div>
                                <div class="form-group add_bottom_30">
                                    <div class="styled-select">
                                        <select class="required" name="country">
                                            <option value="" selected>Select your country</option>
                                            <option value="Europe">Europe</option>
                                            <option value="Asia">Asia</option>
                                            <option value="North America">North America</option>
                                            <option value="South America">South America</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="checkbox_questions">
                                    <input name="terms" type="checkbox" class="icheck required" value="yes">
                                    <label>Please accept <a href="#" data-toggle="modal" data-target="#terms-txt">terms and conditions</a>.</label>
                                </div>
                            </div>
                            <!-- /box_general -->
                        </div>
                    </div>
                    <!-- /row -->
                </div>
                <!-- /Last step ============================== -->
            </div>
            <!-- /middle-wizard -->
            <div id="bottom-wizard">
                <div class="float-right clearfix">
                    <button type="button" name="backward" class="backward">Backward </button>
                    <button type="button" name="forward" class="forward">Forward</button>
                    <button type="submit" name="process" class="submit">Submit</button>
                </div>
            </div>
            <!-- /bottom-wizard -->
            <input type="hidden" id="hidden_total" name="hidden_total">
            <!-- /Hidden total input -->
        </form>
    </div>
    <!-- /Wizard container -->
