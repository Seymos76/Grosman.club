{% extends 'base.html.twig' %}
{% block title %}Configurateur{% endblock %}
{% block configurator_css %}
    <!-- BASE CSS -->
    <link href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('css/icon_fonts/css/all_icons.min.css') }}" rel="stylesheet">
    <!-- YOUR CUSTOM CSS -->
    <link href="{{ asset('css/custom.css') }}" rel="stylesheet">
    <script src="{{ asset('js/modernizr.js') }}"></script>
    <!-- Modernizr -->
{% endblock %}
{% block body %}
    <main>
        <div class="container">
            <div id="wizard_container">
                <form name="example-1" id="wrapped" method="POST">
                    <input id="website" name="website" type="text" value="">
                    <!-- Leave for security protection, read docs for details -->
                    <div id="middle-wizard">

                        <div class="step">
                            <div class="question_title">
                                <h3>Please select a product</h3>
                                <p>Single Selection (Radio based)</p>
                            </div>
                            <div class="row justify-content-center">
                                {% for type in types %}
                                    <div class="col-lg-4">
                                        <div class="item">
                                            <input data-price="{{ type.pricing }}" data-label="{{ type.name }}" id="answer_{{ type.id }}_group_1" type="radio" name="answer_group_1" value="{{ type.id }}" class="required">
                                            <label for="answer_{{ type.id }}_group_1"><img src="{{ type.image }}" alt="" class="img-fluid"><i class="ribbon"><span>Popular</span></i><span class="item_price">€ {{ type.pricing }}</span><strong>{{ type.name }}</strong>Postea democritum mnesarchum ne nam, ad vim aperiri tractatos.</label>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                            <!-- /row-->
                        </div>
                        <!-- /step -->

                        <div class="step">
                            <div class="question_title">
                                <h3>Which Processor is right for you?</h3>
                                <p>Single Selection (Radio based)</p>
                            </div>
                            <div class="row justify-content-center">
                                {% for color in colors %}
                                    <div class="col-lg-4">
                                        <div class="item">
                                            <input data-price="{{ color.pricing }}" data-label="{{ color.name }}" id="answer_{{ color.id }}_group_2" type="radio" name="answer_group_2" value="{{ color.id }}" class="required">
                                            <label for="answer_{{ color.id }}_group_2"><div class="color_item" style="background-color: {{ color.hexa }}"></div><span class="item_price">€ {{ color.pricing }}</span><strong>{{ color.name }}</strong></label>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                            <!-- /row-->
                        </div>
                        <!-- /step -->

                        <div class="step">
                            <div class="question_title">
                                <h3>How much Memory is right for you?</h3>
                                <p>Single Selection (Radio based)</p>
                            </div>
                            <div class="row justify-content-center">
                                {% for patch in patches %}
                                    <div class="col-lg-4">
                                        <div class="item">
                                            <input data-price="{{ patch.pricing }}" data-label="{{ patch.name }}" id="answer_{{ patch.id }}_group_3" type="radio" name="answer_group_3" value="{{ patch.id }}" class="required">
                                            <label for="answer_{{ patch.id }}_group_3"><img src="{{ patch.image }}" alt="" class="img-fluid"><span class="item_price">€ {{ patch.pricing }}</span><strong>{{ patch.name }}</strong></label>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                            <!-- /row-->
                        </div>
                        <!-- /step -->

                        <!-- Last step ============================== -->
                        <div class="submit step">
                            <div class="question_title">
                                <h3>Plase fill with your details</h3>
                                <p>Ei duo homero postea dignissim.</p>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-lg-5">
                                    <div class="box_general">
                                        <div class="form-group">
                                            <label for="gender">Ton genre</label>
                                            <select name="gender" id="gender">
                                                <option value="miss">Madame</option>
                                                <option value="sir">Monsieur</option>
                                                <option value="other">Autre</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="lastname">Ton NOM</label>
                                            <input type="text" name="lastname" id="lastname" class="required form-control" placeholder="Ton NOM">
                                        </div>
                                        <div class="form-group">
                                            <label for="firstname">Ton Prénom</label>
                                            <input type="text" name="firstname" id="firstname" class="required form-control" placeholder="Ton Prénom">
                                        </div>
                                        <div class="form-group">
                                            <label for="email">Ton E-mail</label>
                                            <input type="email" name="email" id="email" class="required form-control" placeholder="Ton E-mail">
                                        </div>
                                        <div class="form-group">
                                            <label for="birthdate">Ta date de naissance</label>
                                            <input type="date" name="birthdate" id="birthdate" class="required form-control">
                                        </div>
                                        <div class="form-group">
                                            <label for="password">Ton mot de passe</label>
                                            <input type="password" name="password" id="password" class="form-control" placeholder="Ton mot de passe">
                                        </div>
                                        <div class="checkbox_questions">
                                            <input name="terms" type="checkbox" class="required" value="yes">
                                            <label>Please accept <a href="#" data-toggle="modal" data-target="#terms-txt">terms and conditions</a>.</label>
                                        </div>
                                    </div>
                                    <!-- /box_general -->
                                </div>
                            </div>
                            <!-- /row -->
                        </div>
                        <!-- /Last step ============================== -->
                    </div>
                    <!-- /middle-wizard -->
                    <div id="bottom-wizard">
                        <div class="float-right clearfix">
                            <button type="button" name="backward" class="backward">Précédent </button>
                            <button type="button" name="forward" class="forward">Suivant</button>
                            <button type="submit" name="process" class="submit">Submit</button>
                        </div>
                    </div>
                    <!-- /bottom-wizard -->
                    <input type="hidden" id="hidden_total" name="hidden_total">
                    <!-- /Hidden total input -->
                </form>
            </div>
            <!-- /Wizard container -->
        </div>
        <!-- /Container -->
    </main>
    <!-- /main -->

    <!-- Modal terms -->
    <div class="modal fade" id="terms-txt" tabindex="-1" role="dialog" aria-labelledby="termsLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="termsLabel">Terms and conditions</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
